<Window x:Class="Thumbs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Name="ThumbsWindow"
        Title="Thumbs" 
        Height="700"
        Width="2560"
        WindowState="Maximized"
        SizeToContent="Manual"
        AllowsTransparency="True"
        WindowStyle="None"
        ResizeMode="NoResize">
    <Window.Background>
        <SolidColorBrush Opacity="0" Color="White"/>
    </Window.Background>
    <DockPanel x:Name="FullWindow">
        <!--<Button Content="Refresh"
                        DockPanel.Dock="Top"
                        HorizontalAlignment="Left"
                        Width="310"
                        Command="Refresh"/>-->
        <Label x:Name="LeftPanel" DockPanel.Dock="Left" Width="310" Background="#55000000" />
        <Label x:Name="RightPanel" DockPanel.Dock="Right" Width="310" Background="#55000000" Visibility="Collapsed" />
        <Label />
    </DockPanel>
</Window>
